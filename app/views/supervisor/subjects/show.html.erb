<% provide :title, @subject.name %>
<div class="panel panel-info">
  <div class="alert alert-info" role="alert"><span class="user">
    <h3><%= link_to @subject.name, @subject %></h3>
    <span class="timestamp">
    Posted <%= time_ago_in_words @subject.created_at %> ago.

    <%= link_to "Delete", supervisor_subject_path, method: :delete,
                                  data: {confirm: t(:confirm_notification)} %>
    <%= link_to "Edit Task", edit_supervisor_subject_path(@subject) %>
    </span>
  </div>
  <span class="content">
    <%= @subject.instruction %>
  </span>
</div>
<%= render @subject.tasks %>
