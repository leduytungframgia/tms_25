<%= f.label :course_code %>
<%= f.text_field :course_code, class: 'form-control' %>

<%= f.label :name %>
<%= f.text_field :name, class: 'form-control' %>

<%= f.label :instruction %>
<%= f.text_area :instruction, class: 'form-control' %>

<%= f.label :start_date %>
<%= f.text_field :start_date, data: {date_format: 'YYYY/MM/DD hh:mm:ss A'}, class: 'form-control datetimepicker', placeholder: 'YYYY/MM/DD hh:mm:ss' %>

<%= f.label :end_date %>
<%= f.text_field :end_date, data: {date_format: 'YYYY/MM/DD hh:mm:ss A'}, class: 'form-control datetimepicker', placeholder: 'YYYY/MM/DD hh:mm:ss' %>

<%= f.submit t(:submit), class: "btn btn-primary" %>
